<div class="row">
  <div class="col-md-4 col-md-offset-8 col-lg-4 col-lg-offset-8">
    <div class="card">
      <div class="header">
        <h4 class="category">Total Users</h4>
        <h4 class="title">{{ total }}</h4>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="header">
        <h4 class="title">Gas Express customers</h4>
        <p class="category">Details</p>
      </div>
      <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
          <thead>
            <th>User ID</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Date registered</th>
          </thead>
          <tbody>
            {% for user in users %}
            <tr>
              <td>{{ user.id }}</td>
              <td>{{ user.fname }}</td>
              <td>{{ user.lname }}</td>
              <td>{{ user.created_at }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
