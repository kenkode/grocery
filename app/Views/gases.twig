<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
              <div class="card">
                  <div class="header">
                      <h4 class="title">Gases</h4>
                  </div>
                  <div class="content">
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped" id="gas_table">
                            <thead>
                              <th>Name</th>
                              <th>Size</th>
                              <th>Price</th>
                              <th></th>
                            </thead>
                            <tbody>
                               {% for size in sizes %}
                                <tr>
                                  <td>{{ size.name }}</td>
                                  <td>{{ size.size }}</td>
                                  <td>{{ size.price }}</td>
                                  <td>
                                  <div class="btn-group">
                                  <button type="button" class="remove_gas_button btn btn-default" data-id="{{ size.id }}" data-size="{{ size.size }}"><i class="pe-7s-trash"></i></button>
                                  <button type="button" class="edit btn btn-default" data-id="{{ size.id }}" data-gid="{{ size.gas_id }}"  data-type="0"><i class="pe-7s-edit"></i></button></div></td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <hr>
                    <div class="footer">
                    </div>
                  </div>
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label for="gas_name">Gas Type</label>
                <input type="text" name="gas_type" class="form-control">
              </div>
              <button type="button" class="btn btn-info btn-fill pull-right" id="update-gas">Update</button>
              <div class="clearfix">
              </div>
              <hr>
              <div class="form-group">
                <label for="gas_name">Gas Type</label>
                <select class="form-control" name="gas_name" id="gas_name">
                  {% for gas in gases %}
                    <option value="{{ gas.id }}">{{ gas.name }}</option>
                  {% endfor %}
                </select>
              </div>
              <div class="form-group">
                <label for="gas_size">Gas Size</label>
                <input type="number" name="gas_size" class="form-control">
              </div>
              <div class="form-group">
                <label for="gas_price">Gas Price</label>
                <input type="number" name="gas_price" class="form-control">
              </div>
              <button type="button" class="btn btn-info btn-fill pull-right" id="add-gas">Add Gas</button>
            </div>
        </div>
    </div>
</div>
